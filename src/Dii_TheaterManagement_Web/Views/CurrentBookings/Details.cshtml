@model Dii_TheaterManagement_Web.Models.TheaterBookingViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Booking Details for @DiiCommon.Time.Month.GetDisplayValue(Model.MonthId)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-monthid="@Model.MonthId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
